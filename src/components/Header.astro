---
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: "/", label: "Home" },
  { href: "/projects", label: "Case Studies" },
  { href: "/contact", label: "Contact" },
];
---

<header
  class="sticky top-0 z-50 w-full backdrop-blur-md bg-background/70 border-b border-muted"
>
  <nav class="max-w-5xl mx-auto px-6 py-4 flex justify-between items-center">
    <a
      href="/"
      class="text-xl font-bold tracking-tight text-primary"
      transition:name="logo"
    >
      Christos Samourelis
    </a>
    <div class="flex items-center gap-6">
      {
        navLinks.map((link) => (
          <a
            href={link.href}
            class:list={[
              "text-sm font-medium hover:text-primary transition-colors",
              currentPath === link.href
                ? "text-primary"
                : "text-muted-foreground",
            ]}
          >
            {link.label}
          </a>
        ))
      }
    </div>
  </nav>
</header>
