<header
  class="sticky top-0 z-50 w-full backdrop-blur-md bg-background/70 border-b border-muted"
>
  <nav class="max-w-5xl mx-auto px-6 py-4 flex justify-between items-center">
    <a
      href="/"
      class="text-lg sm:text-xl font-bold tracking-tight text-primary"
    >
      Christos Samourelis
    </a>

    <!-- Desktop Nav -->
    <div class="hidden md:flex items-center gap-6">
      {
        navLinks.map((link) => (
          <a
            href={link.href}
            class:list={[
              "text-sm font-medium hover:text-primary transition-colors",
              currentPath === link.href
                ? "text-primary"
                : "text-muted-foreground",
            ]}
          >
            {link.label}
          </a>
        ))
      }
    </div>

    <!-- Hamburger Button (Mobile) -->
    <button
      id="menu-toggle"
      class="md:hidden focus:outline-none"
      aria-label="Toggle navigation menu"
    >
      <!-- Simple SVG Hamburger Icon -->
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="w-6 h-6 text-primary"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </nav>

  <!-- Mobile Menu -->
  <div
    id="mobile-menu"
    class="md:hidden flex-col space-y-4 px-6 py-4 bg-background/90 backdrop-blur-md border-t border-muted absolute top-16 inset-x-0 opacity-0 -translate-y-5 hidden"
  >
    {
      navLinks.map((link) => (
        <a
          href={link.href}
          class:list={[
            "text-base font-medium hover:text-primary transition-colors",
            currentPath === link.href
              ? "text-primary"
              : "text-muted-foreground",
          ]}
        >
          {link.label}
        </a>
      ))
    }
  </div>

  <script>
    import { initMenu } from "../scripts/menu.js";
    initMenu();
  </script>
</header>
