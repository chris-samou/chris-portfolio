---
const ICONS = {
  github_light: "/svg/github-light.svg",
  linkedin: "/svg/linkedin.svg",
  mail: "/svg/mail.svg",
  html5: "/svg/html5.svg",
  css3: "/svg/css3.svg",
  javascript: "/svg/javascript.svg",
  typescript: "/svg/typescript.svg",
  astro: "/svg/astro.svg",
  tailwind: "/svg/tailwind.svg",
  nodejs: "/svg/nodejs.svg",
  git: "/svg/git.svg",
  angular: "/svg/angular.svg",
  arrow: "/svg/arrow.svg",
  react: "/svg/react.svg",
  sass: "/svg/sass.svg",
  sql: "/svg/mysql.svg",
  svelte: "/svg/svelte.svg",
};

export type IconName = keyof typeof ICONS;

interface Props {
  name: IconName;
  class?: string;
}

const { name, ...rest } = Astro.props;
const src = ICONS[name];
---

<img src={src} alt={name} loading="lazy" {...rest} />
